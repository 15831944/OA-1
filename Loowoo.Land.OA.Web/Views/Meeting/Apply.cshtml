@{
    Layout = "~/Views/Shared/_ModalLayout.cshtml";
    ViewBag.Title = "会议申请";
    ViewBag.FormId = "meeting";
}
<div class="form-group">
    <label class="control-label col-sm-3">名称：</label>
    <div class="col-sm-8">
        <select class="form-control">
            <option>一楼会议室1</option>
        </select>
    </div>
</div>
<div class="form-group">
    <label class="control-label col-sm-3">开会日期：</label>
    <div class="col-sm-8">
        <input type="text" class="form-control datepicker" />
    </div>
</div>
<div class="form-group">
    <label class="control-label col-sm-3">时间段：</label>
    <div class="col-sm-8">
        <div class="input-group">
            <input type="number" class="form-control" />
            <span class="input-group-addon">到</span>
            <input type="number" class="form-control" />
        </div>
    </div>
</div>
<div class="form-group">
    <label class="control-label col-sm-3">会议简介：</label>
    <div class="col-sm-8">
        <textarea class="form-control" rows="2"></textarea>
    </div>
</div>
<div class="form-group">
    <label class="control-label col-sm-3">参与人员：</label>
    <div class="col-sm-8">
        <div class="input-group">
            <input type="text" class="form-control" />
            <span class="input-group-btn">
                <a href="#" class="btn btn-primary"><i class="fa fa-sitemap"></i></a>
            </span>
        </div>
    </div>
</div>
<div class="form-group">
    <label class="control-label col-sm-3">相关附件：</label>
    <div class="col-sm-8">
        <a href="#" class="btn btn-primary btn-sm"><i class="fa fa-paperclip"></i> 选择附件</a>
    </div>
</div>

<script>
    $(function () {
        $('.datepicker').datepicker({
            startDate: "@(DateTime.Now.ToString("yyyy-MM-dd"))",
            language: "zh-CN"
        });
    });
</script>
