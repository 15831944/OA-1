<style>
    #app-attendance .calendar .table td { height: 130px; }
</style>
@{
    var date = new DateTime(DateTime.Now.Year, DateTime.Now.Month, 1);
}
<div id="app-attendance">
    <div class="toolbar">
        <div class="left">
            <a href="@Url.Action("vacation")" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#modal"><i class="fa fa-plus"></i> 申请假期</a>
            <a href="@Url.Action("export")" class="btn btn-warning btn-sm"><i class="fa fa-mail-forward"></i> 导出记录</a>
        </div>
        <div class="right">
            <strong> @(date.Year)年@(date.Month)月 </strong>
            <div class="btn-group">
                <a href="#" class="btn btn-default btn-sm">
                    今天
                </a>
                <a href="#" class="btn btn-default btn-sm">
                    <i class="fa fa-chevron-left"></i> 上月
                </a>
                <a href="#" class="btn btn-default btn-sm">
                    <i class="fa fa-chevron-right"></i> 下月
                </a>
            </div>
        </div>
    </div>
    <div class="content row">
        <div class="col-lg-8">
            @Html.Action("Calendar", "Home", new { date })
        </div>
        <div class="col-lg-4">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th style="width:100px;">考勤统计</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>正常考勤</td>
                        <td>5</td>
                    </tr>
                    <tr>
                        <td>迟到次数</td>
                        <td>0</td>
                    </tr>
                    <tr>
                        <td>早退次数</td>
                        <td>2</td>
                    </tr>
                    <tr>
                        <td>缺勤次数</td>
                        <td>0</td>
                    </tr>
                    <tr>
                        <td>公务请假次数</td>
                        <td>1</td>
                    </tr>
                    <tr>
                        <td>私事请假次数</td>
                        <td>0</td>
                    </tr>
                </tbody>
            </table>
            <table class="table table-hover" id="table-record" style="display:none;">
                <thead>
                    <tr>
                        <th class="title" colspan="2">打卡记录</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td style="width:100px;">上午</td>
                        <td>2017-01-11 08:30:01</td>
                    </tr>
                    <tr>
                        <td>下午</td>
                        <td>2017-01-11 16:30:01</td>
                    </tr>
                </tbody>
            </table>
            <table class="table" id="table-leave" style="display:none;">
                <thead>
                    <tr>
                        <th class="title" colspan="2">请假记录</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td style="width:100px;">请假原因</td>
                        <td>
                            这里填写的是当时申请时的请假原因<br />
                            这里填写的是当时申请时的请假原因
                        </td>
                    </tr>
                    <tr>
                        <td>假期范围</td>
                        <td>
                            2017-01-03 ~ 2017-01-05
                        </td>
                    </tr>
                    <tr>
                        <td>审批结果</td>
                        <td>
                            同意<br />
                            某某某 2016-12-30 
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
