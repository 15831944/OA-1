@{
    Layout = null;
    ViewBag.Title = "新建日程";
}
<form id="form-calendar" action="@(Url.Action("Save"))" method="post" class="form-horizontal">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"><i class="@(ViewBag.Icon)"></i> @(ViewBag.Title)</h4>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label class="control-label col-sm-3">名称：</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" placeholder="请输入日程名称" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3">起止时间：</label>
            <div class="col-sm-8">
                <div class="input-daterange input-group" id="datepicker">
                    <input type="text" class="input-sm form-control" name="start" />
                    <span class="input-group-addon">到</span>
                    <input type="text" class="input-sm form-control" name="end" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3">提醒：</label>
            <div class="col-sm-6">
                提前 <input type="number" class="form-control" value="1" size="1" style="width:50px;display:inline-block;" /> 小时
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3">描述：</label>
            <div class="col-sm-8">
                <textarea class="form-control"></textarea>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <div class="col-sm-8 col-sm-offset-3">
            <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-ok"></i> 确定</button>
        </div>
    </div>
</form>
<script>
    $(function () {
        $('#form-calendar .input-daterange').datepicker({
            language: "zh-CN",
            autoclose: true
        });
        $("#form-calendar").setForm(function () {
            alert("保存完成");
            window.location.href = "@(Url.Action("Index"))";
        });
    });
</script>

