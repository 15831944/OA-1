<div id="app-archive">
    <div class="toolbar">
        <div class="left">
            <a href="@Url.Action("Apply")" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#modal"><i class="fa fa-plus"></i> 申请查询</a>
        </div>
        <div class="right col-lg-3">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="档案关键词" />
                <div class="input-group-btn">
                    <button class="btn btn-primary"><i class="fa fa-search"></i>查询</button>
                </div>
            </div>
        </div>
    </div>
</div>
