                <th width="150">归档时间</th>
                <th width="150">操作    </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in list)
            {
                <tr>
                    <td>@(item.Code)</td>
                    <td><a href="@(Url.Action("Detail", new { item.ID }))">@(item.Title)</a></td>
                    <td>@(item.Category.Name)</td>
                    <td>@(item.CreateTime.ToString("yyyy-MM-dd"))</td>
                    <td>
                        <a href="@Url.Action("read",new { item.ID})" class="btn btn-sm btn-primary"><i class="fa fa-eye"></i> 查阅</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
