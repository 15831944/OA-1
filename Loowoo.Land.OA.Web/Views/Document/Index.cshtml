@{
    ViewBag.Title = "Index";
    List<Document> list = new List<Document>
    {
    };
}
<div id="app-document">
    <div class="toolbar">
        <div class="left">
            <a href="@(Url.Action("Edit"))" class="btn btn-sm btn-primary"><i class="fa fa-file-o"></i> 新建公文</a>
            <a href="@Url.Action("Export")" class="btn btn-sm btn-danger"><i class="glyphicon glyphicon-export"></i> 导出公文</a>
        </div>
        <div class="right col-sm-4">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="档案关键词" />
                <div class="input-group-btn">
                    <button class="btn btn-primary"><i class="fa fa-search"></i>查询</button>
                </div>
            </div>
        </div>
    </div>
    <div class="content">
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th style="width:150px;">收文字号</th>
                    <th>标题    </th>
                    <th style="width:160px;">公文分类</th>
                    <th>发文机关</th>
                    <th style="width:150px;">印发时间</th>
                    <th style="width:150px;">当前流程</th>
                    <th style="width:120px;">状态    </th>
                    <th style="width:160px;">操作    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in list)
            {
                    <tr>
                        <td>@(item.Number)</td>
                        <td><a href="@(Url.Action("Detail", new { item.ID }))">@(item.Title)</a></td>
                        <td>@(item.Category.Name)</td>
                        <td>@(item.Organ)</td>
                        <td>@(item.CreateTime.ToString("yyyy-MM-dd"))</td>
                        <td>@(item.FlowStep)</td>
                        <td>
                            @switch (item.ApproveResult)
                            {
                                case ApproveResult.Agreed:
                                    <span class="text text-success">@(item.ApproveResult.GetDescription())</span>
                                    break;
                                case ApproveResult.Disagreed:
                                    <span class="text text-danger">@(item.ApproveResult.GetDescription())</span>
                                    break;
                                default:
                                    <span class="text">@(item.ApproveResult.GetDescription())</span>
                                    break;
                            }
                        </td>
                        <td>
                            <a href="@Url.Action("edit",new { item.ID})" class="btn btn-sm btn-primary"><i class="fa fa-pencil"></i> 编辑</a>
                            <a href="#@Url.Action("approval",new { item.ID})" class="btn btn-sm btn-success"><i class="fa fa-check"></i> 审批</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>