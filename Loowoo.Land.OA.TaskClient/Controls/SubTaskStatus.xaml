<UserControl x:Class="Loowoo.Land.OA.TaskClient.Controls.SubTaskStatus"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Loowoo.Land.OA.TaskClient.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="80">
    <Grid>
        <Label Visibility="Hidden" Padding="24,0,0,0" x:Name="ctrDoneStatus" Content="完成" FontSize="20" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Foreground="#FF9B6336" >
            <Label.Background>
                <ImageBrush ImageSource="/Loowoo.Land.OA.TaskClient;component/Images/icon_complete.png" Stretch="None" AlignmentX="Left"/>
            </Label.Background>
        </Label>
        <Label Padding="0,0,0,0" x:Name="ctrDoingStatus" Content="未完成" FontSize="20" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Foreground="#FF9B6336" >
        </Label>
    </Grid>
</UserControl>
