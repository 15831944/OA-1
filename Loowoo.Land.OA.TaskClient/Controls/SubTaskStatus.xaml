<UserControl x:Class="Loowoo.Land.OA.TaskClient.Controls.SubTaskStatus"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Loowoo.Land.OA.TaskClient.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
        <Label x:Name="ctrDoingStatus" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Foreground="#FF9B6336" >
            <Label.Background>
                <ImageBrush ImageSource="/Loowoo.Land.OA.TaskClient;component/Images/doing.png" Stretch="None" AlignmentX="Center"/>
            </Label.Background>
        </Label>
        <Label x:Name="ctrDoneStatus" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Foreground="#FF9B6336" >
            <Label.Background>
                <ImageBrush ImageSource="/Loowoo.Land.OA.TaskClient;component/Images/done.png" Stretch="None" AlignmentX="Center"/>
            </Label.Background>
        </Label>
    </Grid>
</UserControl>
